{
    "compilerOptions": {
        "target": "ESNext",
        "lib": ["dom", "dom.iterable", "ESNext", "ESNext.Array"],
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "dist",
        "declaration": true,
        "strict": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "strictFunctionTypes": true,
        "strictPropertyInitialization": true,
        "strictBindCallApply": true
    },
    "exclude": ["node_modules", "tests", "dist"],
    "include": ["src/**/*"]
}
